{
  "name"             : "Password Unveil",
  "version"          : "1.0.0",
  "manifest_version" : 2,
  "description"      : "Reveal characters in 'password' input fields",
  "homepage_url"     : "https://github.com/yairEO/password-unveil",
  "icons"            : {
    "16"  : "icons/icon16.png",
    "48"  : "icons/icon48.png",
    "128" : "icons/icon128.png"
  },

  "default_locale" : "en",
  "permissions"    : ["activeTab", "https://*/*", "http://*/*", "tabs", "storage"],
  "background"     : {
    "scripts"    : ["js/background.js"],
    "persistent" : false
  },

  "browser_action" : {
    "default_icon"  : "icons/off.png",
    "default_title" : "Reveal Passwords in Inputs"
  }
}